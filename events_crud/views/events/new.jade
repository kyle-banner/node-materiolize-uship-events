extends ../layout

block content
	h1.
		#{title}
	form#formAddEvent(name="addEvent",method="post",action="/events", enctype='multipart/form-data')
		p Title:
			input#inputTitle(type="text", placeholder="ex. Crawfish Boil", name="title", style="width:400px")
		p Caption:
			input#inputCaption(type='text', placeholder="ex. Come to the Crawfish Boil!", name='caption', style="width:400px")
		p Info:
			input#inputInfo(type='text', placeholder="ex. Friday, May 6th @ Matt Chasen's house on Mt. Bonnell Rd.", name='info', style="width:400px")
		p Link:
			input#inputInfo(type='text', placeholder="ex. http://goo.gl/form", name='link', style="width:400px")
		p Image:
			input#inputImage(type='file', name="image", accept='image/jpeg,image/gif,image/png,image/bmp,image/tiff')
		p
			button#btnSubmit(type="submit", class="btn btn-success") submit
